<Window x:Class="TrajectoryPlanning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrajectoryPlanning"
        mc:Ignorable="d"
        Title="Trajectory Planning 3-DoF" Width="800" Height="680" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">

            <Border BorderBrush="Gray" BorderThickness="1" Height="300" Margin="0,0,0,10" Background="White">
                <Grid x:Name="m_chart" ClipToBounds="True">

                    <Line Stroke="#AA777777" StrokeThickness="1" X1="0" X2="1"
                          Stretch="Fill" StrokeDashArray="2,2"
                          VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                    <Line Stroke="#AA777777" StrokeThickness="1" Y1="0" Y2="1"
                          Stretch="Fill" StrokeDashArray="2,2"
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                    <Canvas x:Name="m_pathCanvas" />
                    <Canvas x:Name="m_armCanvas" />
                </Grid>
            </Border>

            <GroupBox Header="Initialization" Padding="5" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="a1" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtA1" Text="120" Grid.Row="0" Grid.Column="1" Margin="2"/>
                    <Label Content="a2" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtA2" Text="130" Grid.Row="1" Grid.Column="1" Margin="2"/>
                    <Label Content="a3" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtA3" Text="85" Grid.Row="2" Grid.Column="1" Margin="2"/>

                    <Label Content="Titik (n)" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtN" Text="25" Grid.Row="0" Grid.Column="3" Margin="2"/>
                    <Label Content="Waktu (t)" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
                    <TextBox x:Name="TxtT" Text="1000" Grid.Row="1" Grid.Column="3" Margin="2"/>

                    <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,5,0,0">
                        <RadioButton x:Name="RadioTimePath" Content="Time/Path" IsChecked="True"/>
                        <RadioButton x:Name="RadioTimeTrack" Content="Time/Track"/>
                    </StackPanel>

                    <Button x:Name="BtnClearPath" Content="Clear Path" Grid.Row="3" Grid.Column="3" Margin="0,10,0,0" Padding="5,2" HorizontalAlignment="Right"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="Robot Status &amp; Indicators" Padding="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                        <Label Content="COM:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="CmbPorts" Width="100" VerticalAlignment="Center" Margin="5,0"/>
                        <Button x:Name="BtnConnect" Content="Connect" Width="70" Margin="2"/>
                        <Button x:Name="BtnDisconnect" Content="Disconnect" Width="70" Margin="2"/>
                        <Button x:Name="BtnOriginPose" Content="Origin" Width="50" Margin="2"/>
                    </StackPanel>

                    <Border BorderBrush="Gray" BorderThickness="1" Padding="6" Margin="0,8,0,0" Background="#FFF9F9F9">
                        <UniformGrid Columns="4" Rows="3">
                            <TextBlock Text="Qx:" VerticalAlignment="Center"/>
                            <TextBox x:Name="IndicatorQx" IsReadOnly="True" />
                            <TextBlock Text="θ1 (°):" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBox x:Name="IndicatorT1" IsReadOnly="True" />

                            <TextBlock Text="Qy:" VerticalAlignment="Center"/>
                            <TextBox x:Name="IndicatorQy" IsReadOnly="True" />
                            <TextBlock Text="θ2 (°):" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBox x:Name="IndicatorT2" IsReadOnly="True" />

                            <TextBlock Text="Φ (°):" VerticalAlignment="Center"/>
                            <TextBox x:Name="IndicatorPhi" IsReadOnly="True" />
                            <TextBlock Text="θ3 (°):" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBox x:Name="IndicatorT3" IsReadOnly="True" />
                        </UniformGrid>
                    </Border>
                </StackPanel>
            </GroupBox>

        </StackPanel>

        <StackPanel Grid.Column="1">
            <GroupBox Header="Joint Space Representation" Padding="5" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="Initial Posture (θ1, θ2, θ3):"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="TxtTeta1_0" Text="0" Width="40" Margin="2"/>
                            <TextBox x:Name="TxtTeta2_0" Text="0" Width="40" Margin="2"/>
                            <TextBox x:Name="TxtTeta3_0" Text="0" Width="40" Margin="2"/>
                        </StackPanel>
                        <Label Content="Final Posture (θ1, θ2, θ3):"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="TxtTeta1_1" Text="45" Width="40" Margin="2"/>
                            <TextBox x:Name="TxtTeta2_1" Text="45" Width="40" Margin="2"/>
                            <TextBox x:Name="TxtTeta3_1" Text="-30" Width="40" Margin="2"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <Label Content="Trajectory Generated:"/>
                        <ListBox x:Name="ListJointSpace" Height="100"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="BtnCalcJoint" Content="Calculate" Width="80" Margin="2,5"/>
                        <Button x:Name="BtnRunJoint" Content="Run" Width="80" Margin="2,5"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Header="Work Space Representation" Padding="5" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,5,0">
                        <Label Content="Initial Posture (Px, Py, Φ):"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="TxtQx_0" Text="0" Width="40" Margin="2"/>
                            <TextBox x:Name="TxtQy_0" Text="0" Width="40" Margin="2"/>
                            <TextBox x:Name="TxtOrientasi_0" Text="0" Width="40" Margin="2"/>
                        </StackPanel>
                        <Label Content="Final Posture (Px, Py, Φ):"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="TxtQx_1" Text="0" Width="40" Margin="2"/>
                            <TextBox x:Name="TxtQy_1" Text="0" Width="40" Margin="2"/>
                            <TextBox x:Name="TxtOrientasi_1" Text="0" Width="40" Margin="2"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1">
                        <Label Content="Trajectory Generated:"/>
                        <ListBox x:Name="ListWorkSpace" Height="100"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button x:Name="BtnCalcWork" Content="Calculate" Width="80" Margin="2,5"/>
                        <Button x:Name="BtnRunWork" Content="Run" Width="80" Margin="2,5"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
            <Button x:Name="BtnExit" Content="Exit" HorizontalAlignment="Right" Width="100" Padding="5,2"/>
        </StackPanel>
    </Grid>
</Window>