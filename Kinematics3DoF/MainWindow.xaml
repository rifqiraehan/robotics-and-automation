<Window x:Class="Kinematics3DoF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinematics 3 DoF" Height="500" Width="1000"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Servo Controls -->
            <RowDefinition Height="Auto"/>
            <!-- Middle Section -->
            <RowDefinition Height="*"/>
            <!-- Inverse Kinematic -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom Buttons -->
        </Grid.RowDefinitions>

        <!-- ================= Servo Controls ================= -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Servo 0 -->
            <GroupBox Header="Servo 0" Grid.Column="0" Margin="5">
                <StackPanel>
                    <Slider x:Name="SliderServo0" Minimum="0" Maximum="180" TickFrequency="1"
                            IsSnapToTickEnabled="True" Value="0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Sudut"/>
                            <TextBox x:Name="TxtServo0Sudut" Width="60" Text="0"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Min"/>
                            <TextBox x:Name="TxtServo0Min" Width="60" Text="500"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Maks"/>
                            <TextBox x:Name="TxtServo0Max" Width="60" Text="2500"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Interpolasi"/>
                            <TextBox x:Name="TxtServo0Interp" Width="60" IsReadOnly="True"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Servo 2 -->
            <GroupBox Header="Servo 2" Grid.Column="1" Margin="5">
                <StackPanel>
                    <Slider x:Name="SliderServo2" Minimum="-90" Maximum="90" TickFrequency="1"
                            IsSnapToTickEnabled="True" Value="0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Sudut"/>
                            <TextBox x:Name="TxtServo2Sudut" Width="60" Text="0"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Min"/>
                            <TextBox x:Name="TxtServo2Min" Width="60" Text="500"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Maks"/>
                            <TextBox x:Name="TxtServo2Max" Width="60" Text="2500"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Interpolasi"/>
                            <TextBox x:Name="TxtServo2Interp" Width="60" IsReadOnly="True"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Servo 3 -->
            <GroupBox Header="Servo 3" Grid.Column="2" Margin="5">
                <StackPanel>
                    <Slider x:Name="SliderServo3" Minimum="-90" Maximum="90" TickFrequency="1"
                            IsSnapToTickEnabled="True" Value="0"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Sudut"/>
                            <TextBox x:Name="TxtServo3Sudut" Width="60" Text="0"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Min"/>
                            <TextBox x:Name="TxtServo3Min" Width="60" Text="500"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Maks"/>
                            <TextBox x:Name="TxtServo3Max" Width="60" Text="2500"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Interpolasi"/>
                            <TextBox x:Name="TxtServo3Interp" Width="60" IsReadOnly="True"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- ================= Middle Section ================= -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- COM PORT -->
            <GroupBox Header="COM PORT" Grid.Column="0" Margin="5">
                <StackPanel>
                    <ComboBox x:Name="CmbPorts" Width="100" Margin="5"/>
                    <Button x:Name="BtnOpenPort" Content="Open Port" Margin="5"/>
                    <Button x:Name="BtnClosePort" Content="Close Port" Margin="5"/>
                    <Button x:Name="BtnOrigin" Content="Origin Position" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <!-- Robot Parameter -->
            <GroupBox Header="Robot Parameter" Grid.Column="1" Margin="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="a1" Width="30"/>
                        <TextBox x:Name="TxtA1" Width="80" Text="120" IsReadOnly="True"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="a2" Width="30"/>
                        <TextBox x:Name="TxtA2" Width="80" Text="130" IsReadOnly="True"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="a3" Width="30"/>
                        <TextBox x:Name="TxtA3" Width="80" Text="85" IsReadOnly="True"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Forward Kinematic -->
            <GroupBox Header="Forward Kinematic Result" Grid.Column="2" Margin="5">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Qx" Width="30"/>
                        <TextBox x:Name="TxtQx" Width="100" IsReadOnly="False"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Qy" Width="30"/>
                        <TextBox x:Name="TxtQy" Width="100" IsReadOnly="False"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Orientasi" Width="60"/>
                        <TextBox x:Name="TxtOrientasi" Width="100" IsReadOnly="False"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Jepit (Servo 4) -->
            <GroupBox Header="Jepit" Grid.Column="3" Margin="5">
                <StackPanel>
                    <Slider x:Name="SliderGrip" Minimum="770" Maximum="1700" Value="770" TickFrequency="10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <StackPanel Margin="10,0">
                            <TextBlock Text="mm"/>
                            <TextBox x:Name="TxtGripMm" Width="60" Text="380" IsReadOnly="True"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Min Pulse"/>
                            <TextBox x:Name="TxtGripMin" Width="60" Text="770"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Max Pulse"/>
                            <TextBox x:Name="TxtGripMax" Width="60" Text="1700"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Interpolasi"/>
                            <TextBox x:Name="TxtGripInterp" Width="60" IsReadOnly="True"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- ================= Inverse Kinematic ================= -->
        <GroupBox Header="Inverse Kinematic" Grid.Row="2" Margin="5">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Solusi 1" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                <TextBlock Text="Solusi 2" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1"/>

                <!-- θ1 & θ2 sejajar -->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="θ1" Width="30" TextAlignment="Right"/>
                    <TextBox x:Name="TxtTheta1Sol1" Width="60"/>
                    <TextBlock Text="θ2" Width="30" TextAlignment="Right"/>
                    <TextBox x:Name="TxtTheta2Sol1" Width="60"/>
                    <TextBlock Text="θ3" Width="30" TextAlignment="Right"/>
                    <TextBox x:Name="TxtTheta3Sol1" Width="60"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="θ1" Width="30" TextAlignment="Right"/>
                    <TextBox x:Name="TxtTheta1Sol2" Width="60"/>
                    <TextBlock Text="θ2" Width="30" TextAlignment="Right"/>
                    <TextBox x:Name="TxtTheta2Sol2" Width="60"/>
                    <TextBlock Text="θ3" Width="30" TextAlignment="Right"/>
                    <TextBox x:Name="TxtTheta3Sol2" Width="60"/>
                </StackPanel>

                <!-- Tombol sejajar -->
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center">
                    <Button x:Name="BtnCompute" Content="Compute" Margin="5,0"/>
                    <Button x:Name="BtnCalcSol1" Content="Calculate" Margin="5,0"/>
                    <Button x:Name="BtnRunSol1" Content="Run" Margin="5,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center">
                    <Button x:Name="BtnCalcSol2" Content="Calculate" Margin="5,0"/>
                    <Button x:Name="BtnRunSol2" Content="Run" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- ================= Bottom Buttons ================= -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="BtnExit" Content="Exit" Width="80" Margin="5"/>
            <Button x:Name="BtnCancel" Content="Cancel" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>